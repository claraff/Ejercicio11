<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/negro"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.clara.ejercicio11.Parte1">

    <TextView
        android:id="@+id/tVrojo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/rojo"
        android:padding="8dp"
        android:text="@string/rojo"
        android:textColor="@color/negro" />

    <TextView
        android:id="@+id/tVnaranja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/naranja"
        android:padding="8dp"
        android:text="@string/naranja"
        android:textColor="@color/negro" />

    <TextView
        android:id="@+id/tVamarillo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/amarillo"
        android:padding="8dp"
        android:text="@string/amarillo"
        android:textColor="@color/negro" />

    <TextView
        android:id="@+id/tVverde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/verde"
        android:padding="8dp"
        android:text="@string/verde"
        android:textColor="@color/negro" />

    <TextView
        android:id="@+id/tVazul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/azul"
        android:padding="8dp"
        android:text="@string/azul"
        android:textColor="@color/blanco" />

    <TextView
        android:id="@+id/tVindigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/indigo"
        android:padding="8dp"
        android:text="@string/indigo"
        android:textColor="@color/blanco" />

    <TextView
        android:id="@+id/tVvioleta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/violeta"
        android:padding="8dp"
        android:text="@string/violeta"
        android:textColor="@color/negro" />

</RelativeLayout>
